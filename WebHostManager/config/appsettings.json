				"urls": "https://localhost:44302;http://localhost:4402"
			},
			"WebHost.InGameApi": {
				"urls": "https://localhost:44303;http://localhost:4403"
			},
			"WebHost.OperatorApi": {
				"urls": "https://localhost:44300;http://localhost:4400"
			},
			"WebHost.Store": {
